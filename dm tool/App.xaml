<Application x:Class="DmTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DmTool" 
             xmlns:views="clr-namespace:DmTool.views"
             xmlns:tabvms="clr-namespace:DmTool.ViewModels.Tabs">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=tabvms:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=tabvms:NPCGeneratorViewModel}">
            <views:NpcGenerator/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=tabvms:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>

</Application>
