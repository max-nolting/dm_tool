<Window x:Class="DmTool.views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DmTool.views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#252525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Height="30" Content="Home" Command="{Binding NavigateToHomeCommand}"/>
            <Button Height="30" Content="NPC Generator" Command="{Binding NavigateToNpcGeneratorCommand}" />
            <Button Height="30" Content="Settings" Command="{Binding NavigateToSettingsCommand}"/>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
    </Grid>
</Window>
